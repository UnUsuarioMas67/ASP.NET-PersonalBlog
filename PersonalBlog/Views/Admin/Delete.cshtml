@model Article
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-9">
            <a class="btn btn-outline-secondary mb-4 d-inline-block" asp-action="Index">← Back</a>
            <div class="text-center">
                <h1 class="mb-3">Delete Article</h1>
                <div class="mb-5">
                    <p class="fs-5 mb-2">You are about to delete <br> <strong>'@Model.Title'</strong></p>
                    <a class="link-primary" asp-action="Article" asp-route-id="@Model.Id">
                        Go to Article
                    </a>
                </div>

                <form method="post" asp-action="Delete">
                    <input type="hidden" asp-for="Id">

                    <div class="text-center">
                        <button class="btn btn-danger" type="submit">Delete</button>
                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

