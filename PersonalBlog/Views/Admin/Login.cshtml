@model PersonalBlog.Models.LoginViewModel

<div class="container">
    <h2 class="mb-4">Admin Login</h2>
    <div class="col-12 col-md-6 col-lg-4">
        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Username"></label>
                <input class="form-control" asp-for="Username">
                <span class="text-danger small" asp-validation-for="Username"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password">
                <span class="text-danger small" asp-validation-for="Username"></span>
            </div>

            @if (Model.Failed)
            {
                <p class="text-danger">Incorrect username or password</p>
            }

            <button class="btn btn-primary" type="submit">Log In</button>
        </form>
    </div>
</div>

