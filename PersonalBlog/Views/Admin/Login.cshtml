@model PersonalBlog.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section Header {
    <header class="pt-4">
        <div class="container-fluid justify-content-center d-flex">
            <a class="h3 link-dark text-decoration-none" asp-controller="Home" asp-action="Index">PersonalBlog</a>
        </div>
    </header>
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6 col-lg-4 border rounded-3 p-4">
            <h2 class="text-center text-md-start mb-4">Admin Login</h2>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="Username"></label>
                    <input class="form-control" asp-for="Username">
                    <span class="text-danger small" asp-validation-for="Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password">
                    <span class="text-danger small" asp-validation-for="Password"></span>
                </div>

                @if (Model.Failed)
                {
                    <p class="text-danger">Incorrect username or password</p>
                }

                <button class="btn btn-primary mt-3 w-100" type="submit">Log In</button>
            </form>
        </div>
    </div>
</div>

