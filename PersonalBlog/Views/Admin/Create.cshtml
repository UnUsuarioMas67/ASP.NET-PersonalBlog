@model PersonalBlog.Models.Article

<div class="container">
    <a asp-action="Index">Go Back</a>
    <h1 class="mb-4 mt-3">New Article</h1>

    <form method="post" asp-action="Create">
        <div class="mb-3">
            <label class="form-label" asp-for="Title"></label>
            <input class="form-control" asp-for="Title">
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Content"></label>
            <textarea rows="20" class="form-control" style="resize: none" asp-for="Content"></textarea>
        </div>

        <div class="mb-3">
            <button class="btn btn-lg btn-primary" type="submit">Add</button>
        </div>
    </form>
</div>