@using System.Text
@using System.Text.RegularExpressions
@model List<PersonalBlog.Models.Article>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center display-4 mb-5">My Blog</h1>

<div class="container">
    <div class="row g-3">
        @foreach (var article in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <a class="fs-5 lh-sm d-inline-block mb-3 card-title" asp-route-id="@article.Id"
                           asp-action="Article">@article.Title</a>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            Published on @Html.DisplayFor(m => article.PublishDate)
                        </h6>
                        <p class="card-text">
                            @{
                                int charLimit = 150;
                                string summary = "";
                                int i = 0;
                                while (true)
                                {
                                    if (article.Content.Length <= charLimit)
                                    {
                                        summary = article.Content;
                                        break;
                                    }
                                    
                                    char curr = article.Content[i];
                                    bool isAtLimit = i > charLimit && Regex.IsMatch(curr.ToString(), @"[\W]");
                                    bool isNewLine = Regex.IsMatch(curr.ToString(), @"[\r\n]");
                                    if (isAtLimit || isNewLine)
                                    {
                                        summary += "...";
                                        break;
                                    }

                                    summary += curr;
                                    i++;
                                }
                            }
                            @summary
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>