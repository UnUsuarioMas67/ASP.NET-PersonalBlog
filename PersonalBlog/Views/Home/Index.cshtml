@using System.Text
@using System.Text.RegularExpressions
@model List<PersonalBlog.Models.Article>
@{
    ViewData["Title"] = "Home";
}

<h1 class="text-center display-4 mb-5">My Blog</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10">
            <div class="row g-3">
                @foreach (var article in Model)
                {
                    <article class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <a class="fs-5 lh-sm d-inline-block mb-3 card-title" asp-route-id="@article.Id"
                                   asp-action="Article">@article.Title</a>
                                <h6 class="card-subtitle small mb-2 text-body-secondary">
                                    Published on @Html.DisplayFor(m => article.PublishDate)
                                </h6>
                                @if (article.Summary != null)
                                {
                                    <p class="card-text">
                                        @article.Summary
                                    </p>
                                }
                            </div>
                        </div>
                    </article>
                }
            </div>
        </div>
    </div>
</div>