@model PersonalBlog.Models.Article
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <a class="link-secondary mb-4 d-inline-block" asp-action="Index">Go Back</a>
    <div class="mb-2 text-secondary">
        <h6 class="small">Published on @Html.DisplayFor(m => m.PublishDate)</h6>
        @if (Model.LastModified != null)
        {
            <h6 class="small">Last updated @Html.DisplayFor(m => m.LastModified)</h6>
        }
    </div>
    <div>
        @Html.Raw(Markdig.Markdown.ToHtml(Model.Content))
    </div>
</div>